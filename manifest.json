{
  "manifest_version": 2,
  "name": "Filter Bubble",
  "version": "0.4.4",
  "default_locale": "en",
  "description": "Take control of the content that you see on the web",
  "homepage_url": "https://github.com/andornaut/filter-bubble",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "96": "icons/96.png",
    "128": "icons/128.png"
  },
  "permissions": ["http://*/*", "https://*/*", "storage", "tabs"],
  "browser_action": {
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "96": "icons/96.png",
      "128": "icons/128.png"
    },
    "default_popup": "popup.html",
    "default_title": "Filter Bubble"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{8b9910a1-0b84-4a02-a72e-c41631745301}",
      "strict_min_version": "79.0"
    }
  }
}
